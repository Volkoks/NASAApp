<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingFragment">

    <TextView
        android:id="@+id/tv_text_theme"
        style="?settingTextStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/theme"
        app:layout_constraintBottom_toBottomOf="@+id/cg_change_theme"
        app:layout_constraintEnd_toStartOf="@+id/cg_change_theme"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cg_change_theme"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="cg_change_theme"
        tools:layout_editor_absoluteX="411dp" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_change_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_text_theme"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">


        <com.google.android.material.chip.Chip
            android:id="@+id/chip_light_theme"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_dark_theme"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_red_theme"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/red" />

    </com.google.android.material.chip.ChipGroup>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/setting_motion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/setting_fragment_start_scene">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_save_setting"
            android:layout_width="59dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_save_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
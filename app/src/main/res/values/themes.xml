<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/teal_200</item>
        <item name="settingTextStyle">@style/TextStyleForSetting</item>
        <item name="android:textColor">@color/black</item>
        <item name="mainTextStyleDescription">@style/textStyleDescriptionForMain</item>
        <item name="mainTextStyleTitle">@style/textStyleTitleForMain</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorOnSurface">@color/purple_200</item>
        <item name="colorSurface">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="settingTextStyle">@style/TextDarkThemeForSetting</item>
    </style>

    <style name="RedTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorBackground">@color/red_200</item>
        <item name="android:colorPrimaryDark">@color/red_A700</item>
        <item name="colorPrimary">@color/red_A700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yelow_1000</item>
        <item name="colorSurface">@color/red_500</item>
    </style>

    <style name="TextStyleForSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextDarkThemeForSetting" parent="TextStyleForSetting">

    </style>

    <style name="textStyleDescriptionForMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>

    <style name="textStyleTitleForMain">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>